package RASA;

public class Neural_Network {
	
	public String Alias;
	
	// Neural Groups
	int Next_NG_ID;
	
	
	// Constructor
	public Neural_Network() {
		Alias = "New NN";
		Next_NG_ID = 1;
	}

	// Reports
	public void Print_Report(String Tags) {
		
		// Header + full info
		if (!Tags.contains("SHORT") || Tags.contains("FULL")) {
			// Print header
			System.out.print("Printing Report for \"" + Alias + "\"");
			
			// Print attributes
			Print_Header();
			System.out.print(" Next NG ID = " + Next_NG_ID);
		}
		

	}
	
	public void Print_Label() {
		System.out.print("[NN:" + Alias + "]");
	}
	
	public void Print_Header() {
		System.out.println("");
		Print_Label();
	}
}
