// Package
package RASA;

//Includes

//------------------------------------------------------------------------------------------
//
//	[END] Includes, Packages, Headers
//
//==========================================================================================
//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
//- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
//==========================================================================================
//
//	[START] Synapse Class
//
//------------------------------------------------------------------------------------------

public class Synapse {

	//=====================================================================
	//
	// CLASS FIELDS
	//
	//---------------------------------------------------------------------
	
	Neuron To;
	Neuron From;
	public Neural_Network NN;
	public double Strength;
	public double Weight;
	
	//=====================================================================
	//
	// CLASS METHODS
	//
	//---------------------------------------------------------------------
	
	public Synapse() {
		// Initialize variables
		To = null;
		From = null;
		NN = null;
		Strength = 0.0;
		Weight = 0.0;
	}
	
	public Synapse(Neuron N_To, Neuron N_From) {
		// Initialize variables
		super();
		To = N_To;
		From = N_From;
		NN = N_From.Parent_NN();
	}

	//==========================================
	// Reports
	//------------------------------------------
	
	public void Print_Report(String Tags) {

		Print_Header();
		System.out.print("\"" + From.Alias + "\"");
		System.out.print(" --> ");
		System.out.print("\"" + To.Alias + "\"");
	}

	/*
	public void Print_Label() {
		System.out.print("[N:" + ID + "]");
	} */

	public void Print_Header() {
		System.out.print("\n");
		From.Parent_NG.Print_Label();
		From.Print_Label();
		System.out.print(" --> ");
		To.Parent_NG.Print_Label();
		To.Print_Label();
	}

}

//------------------------------------------------------------------------------------------
//
//	[END] Synapse Class
//
//==========================================================================================