package RASA;

import java.util.ArrayList;
import java.util.List;

public class Neural_Network {
	//=====================================================================
	// CLASS FIELDS
	//---------------------------------------------------------------------
	
	public String Alias;
	
	// Neural Groups
	int Next_NG_ID;
	List<Neural_Group> NG_List = new ArrayList<Neural_Group>();
	
	//=====================================================================
	// CLASS Methods
	//---------------------------------------------------------------------
	
	// Constructor
	public Neural_Network() {
		Alias = "New NN";
		Next_NG_ID = 1;
	}

	// Reports
	public void Print_Report(String Tags) {
		
		// Header + full info
		if ((!Tags.contains("SHORT") || Tags.contains("FULL")) && !Tags.contains("HIDE_NN"))
		{
			// Print header
			System.out.print("Printing Report for \"" + Alias + "\"");
			
			// Print attributes
			Print_Header();
			System.out.print(" Next NG ID = " + Next_NG_ID);
		}
		

	}
	
	public void Print_Label() {
		System.out.print("[NN:" + Alias + "]");
	}
	public void Print_Header() {
		System.out.println("");
		Print_Label();
	}

	// Neural Groups
	public Neural_Group New_Neural_Group(){
		Neural_Group New_NG = new Neural_Group();
		return New_NG;
	}
	
}
